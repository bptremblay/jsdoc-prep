<section id="qpRequestInput" class="container">

	<div class="view quickpay col-lg-12">
		<section class="qp_header row">
			<div class="col-lg-6">
				<ul class="menu horiz">
					<li id="qp_Sendmoney"><a id="qp_send_money_link">{{send_money_label}}</a></li>
					<li class="selected" id="qp_Requestmoney">{{request_money_label}}</li>
				</ul>
			</div>
			<p class="col-lg-6">{{{request_quickpay_info_label}}}</p>
		</section>

		<div class="form">
			{{#requestInputForm}}
				<div class="row qpcolumn_one">
					<section class="col-lg-4">
					{{> "field" recipientDropdown}}
					</section>

					<section class="col-lg-4">
					{{> "field" tokenDropdown}}
					</section>

					<section class="col-lg-4">
					{{> "field" memoTextbox}}
					</section>
				</div>
					<div class="row">
						<div class="col-lg-offset-4 col-lg-4">
							<div class="row">
								<section class="col-lg-6">
								{{> "field" amountTextbox}}
								</section>

								<section class="col-lg-6">
								{{> "field" amountOptionRadio}}
								</section>
							</div>
						</div>
							<section class="col-lg-4">
							{{> "field" requestedByTextbox}}
							</section>
					</div>

				<footer>
					{{> "menu" formlinks}}

					<div class="actions">
						{{#actions}}
						{{> "button" this}}
						{{/actions}}
					</div>
				</footer>
			{{/requestInputForm}}
		</div>
	</div>
</section>

