<section id="payeeConfirm" class="container">
<div class="billpay-view confirm-view">
	<div class="col-lg-2 column-sidenav"></div>
	<div class="col-lg-10 column-main">
		<div class="jpui form">

			{{#confirmPayeeForm}}
				<div class="row header">
					<section class="col-lg-8">
						{{> "steps" workFlowStep}}
						<div class="jpui confirm success"><i class="fa fa-check"></i>{{confirmModeInstruction}}&nbsp;<span id="payeeNickname"></span>.</div>
					</section>
				</div>
				<div class="row">
					<section class="col-lg-8">
						<header id="payeeNameTitle"></header>
						{{> "field" postalAddress}}
						{{#if postalAddressLine2}}
						<dl class="jpui field">
							<dt>&nbsp;</dt>
							<dd class="data-field"><span>{{postalAddressLine2}}</span></dd>
						</dl>
						{{/if}}
						<dl class="jpui field">
							<dt>&nbsp;</dt>
							<dd class="data-field"><span>{{postalAddressLine3}}</span></dd>
						</dl>
						{{> "field" phoneNumber}}
						{{> "field" payeeAccountNumber}}
						{{> "field" deliveryMethod}}
						{{> "field" fundingAccountDisplayName}}
						{{> "field" payeeGroup}}
					</section>
				</div>

				<footer>
					<div class="actions">
						{{#actions}}
						{{> "button" this}}
						{{/actions}}
					</div>
				</footer>

			{{/confirmPayeeForm}}

		</div>
	</div>
</div>
</section>