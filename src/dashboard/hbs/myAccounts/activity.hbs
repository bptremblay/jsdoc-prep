<div class="transactions-wrapper">
  <!-- IMPORTANT: THIS FILE WILL BE DELETED. PLEASE DO NOT USE -->
  <table class="jpui grouped table">
        {{#if pendingActivity.list}}
            <tr class="header ">
                <th colspan="4">
                    <div><i class="fa fa-angle-down"></i>On Hold</div>
                </th>
            </tr>
            {{#each pendingActivity.list}}
                <tr class="">
                    <td class="vendor" colspan="2">{{this.description}}</td>
                    <td class="amount" colspan="2">{{this.amount}}</td>
                </tr>
                <tr>
                    <td colspan="4" class="second-line">Hold placed on {{this.eDate}}</td>
                </tr>
                <tr class="">
                    <td class="category"></td>
                    <td></td>
                    <td class="action">
                    </td>
                </tr>
            {{/each}}
        {{/if}}
        {{#if postedActivity.list}}
            <h4 id="posted-header">Posted</h4>
            <thead>
              <tr>
                <th>Date</th>
                <th>Description</th>
                <th class="right text">Amount</th>
                <th class="right text">Balance</th>
              </tr>
            </thead>
            {{#each postedActivity.list}}
                <tr class="{{this.class}}">
                    <td>{{this.eDate}}</td>
                    <td>
                      {{this.description}} {{#if this.possitive}}| <img class="seurat-chk-img"/>{{/if}}
                      <span class="subtitle">{{this.type}}</span>
                    </td>
                    <td class="{{#if this.possitive}}positive {{/if}}right text">{{this.amount}}</td>
                    <td class="right text">{{this.balance}}</td>
                </tr>
            {{/each}}
        {{/if}}
    </table>
 </div>
